            <AppBarButton Name="FeedBtn" Label="Continue&#xD;&#xA;Feed" Icon="Play" Click="FeedBtn_Click"/>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Name="PageGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView Name="FilePreview" >
        </ListView>
    </Grid>
</Page>
